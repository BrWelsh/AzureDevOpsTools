<Window x:Class="AzureDevOpsTools.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AzureDevOpsTools.Presentation.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

    </Window.Resources>
    <DockPanel LastChildFill="True">
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="StatusBarItem" Margin="3,0,0,0" />
        </StatusBar>
        <DockPanel LastChildFill="True">
            <ContentPresenter DockPanel.Dock="Left" />
            <!-- Control Center -->
            <Button Width="30" Height="30" Background="{StaticResource Settings_Inverse_16x}"/>
            <ContentPresenter />
        </DockPanel>
    </DockPanel>
</Window>
